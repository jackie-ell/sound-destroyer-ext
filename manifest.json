{
  "manifest_version": 2,

  "name": "Sound Destroyer",
  "description": "Sound Destroyer mutes noisy, intrusive websites. Only trusted sites will make noise on inactive tabs.",
  "version": "0.1",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "16": "icon1600.png",
    "48": "icon1600.png",
    "128": "icon1600.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}
